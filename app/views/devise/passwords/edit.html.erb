




  <body class="login-img bg-gradient">
    <div class="page">
      <div class="page-single">
        <div class="container">
          <div class="row">
            <div class="col col-login mx-auto">
              <div class="text-center mb-6 ">
                <img src="assets/images/brand/logo.png" class="h-6" alt="">
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html:{class: "card"}) do |f| %>
                <div class="card-body p-6">
                  <div class="card-title text-center">Change your password</div>
                  <div class="form-group">
                    <label class="form-label">Email address</label>
                    <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },  class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <label class="form-label">Email address</label>
                    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
                  </div>
                  <%= f.input :reset_password_token, as: :hidden %>
                  <div class="form-footer">
                    <button type="submit" class="btn btn-primary btn-block">Change my password</button>
                  </div>
                  <div class="text-center text-muted mt-3">
                    Already have account? <a href="/dairies/sign_in">Sign in</a>
                  </div>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
