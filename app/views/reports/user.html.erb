<p id="notice"><%= notice %></p>
  <div class="container">
    
      <div class="side-app">
        <div class="row ">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 ">
            <div class="card" >
              <div class="card-header border-bottom">
                <h5 class="card-title">Users</h5>
              </div>
              <div class="emp-tab">
                <div class="table-responsive">
                  <table class="table  table-hover table-striped display" id="data-table">
                    <thead class="text-primary">
                      <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Animal</th>
                        <th>Address</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= user.id %></td>
                          <td><%= user.name %></td>
                          <td><%= user.mobile %></td>
                          <td><%= user.animal %></td>
                          <td><%= user.address %></td>
                        </tr>
                      <%end%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

