
<div class="container">
          <div class="side-app">
            <div class="page-header">
              <a href = '<%=users_path%>' class="btn btn-success"><i class="si si-user-follow mr-2"></i><%= t(:all) + " " + t(:user)%></a>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Users</li>
              </ol>
            </div>

            <div class="row">
              <div class="col-lg-12">
                <%= form_for @user, html:{ class: "card"} do |f| %>
                    <%= f.error_notification message: f.object.errors.full_messages.join(', ') if f.object.errors.present? %>
                  <div class="card-header">
                    <h3 class="card-title"><%= action %> <%= t(:user)%></h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-4 col-lg-6">
                        <div class="form-group">
                          <label class="form-label"><%= t(:name) %>  *</label>
                          <%= f.text_field :name, class:"form-control", placeholder: t(:name)  %>
                          
                          <!-- <input type="text" class="form-control is-invalid state-invalid" name="example-text-input" placeholder="Name">
                          <div class="invalid-feedback">Name Can't be Blank..</div> -->
                        </div>
                      </div>
                      <div class="col-md-4 col-lg-6">
                        <div class="form-group">
                          <div class="form-group">
                            <label class="form-label"><%= t(:mobile) + " " + t(:number)%> *</label>
                            <%= f.text_field :mobile, class:"form-control", placeholder: t(:mobile) + " " + t(:number) %>
                            
                            <!-- <input type="text" class="form-control is-invalid state-invalid" name="example-text-input" placeholder="Name">
                            <div class="invalid-feedback">Mobile Number Can't be Blank..</div> -->
                          </div>
                        </div>  
                      </div>
                      <div class="col-md-4 col-lg-6">
                        <div class="form-group">
                          <div class="form-group">
                            <label class="form-label"><%= t(:email) %></label>
                            <%= f.text_field :email, class:"form-control", placeholder: t(:email) %>
                          </div>
                        </div>  
                      </div>
                      <div class="col-md-4 col-lg-4">
                        <div class="form-group ">
                          <div class="form-label"><%= t(:animal) + " " + t(:type)%> *</div>
                          <div class="custom-controls-stacked" style="display: inline-flex;">
                            <label class="custom-control custom-radio mr-6">
                              
                              <%= f.radio_button :animal_type, true, :checked => true, class: "custom-control-input" %>
                              <span class="custom-control-label"><%= t(:cow) %></span>
                            </label>
                            <label class="custom-control custom-radio">
                              
                              <%= f.radio_button :animal_type, false,class: "custom-control-input" %>
                              <span class="custom-control-label"><%= t(:buffalo) %></span>
                            </label>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-12 col-lg-12">
                        <div class="form-group">
                          <label class="form-label"><%= t(:address) %> <span class="form-label-small">56/100</span></label>
                          <%= f.text_area :address, class:"form-control", placeholder: "Address typre here..",rows: "6" %>
                          
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-right">
                    <div class="d-flex">
                      <a href="javascript:void(0)" class="btn btn-link">Cancel</a>
                      <button type="submit" class="btn btn-primary ml-auto">Create User</button>
                    </div>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>